JIRA_SERVER=https://your-domain.atlassian.net
JIRA_EMAIL=you@example.com
JIRA_API_TOKEN=your_api_token_here
JIRA_PROJECT_KEY=PROJ
JIRA_BOARD_ID=123
SPRINT_LOOKBACK=5
# Optional: adapt these to your Jira instance
STORY_POINTS_FIELD_ID=customfield_10016
SPRINT_FIELD_ID=customfield_10007

# Confluence (optional; defaults fallback to JIRA creds and /wiki base)
CONFLUENCE_SERVER=https://your-domain.atlassian.net/wiki
CONFLUENCE_EMAIL=you@example.com
CONFLUENCE_API_TOKEN=your_api_token_here
CONFLUENCE_SPACE_KEY=ENG
# Optional: set a parent page to nest under
CONFLUENCE_PARENT_PAGE_ID=

# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Caching
CACHE_DIR=.cache
AI_CACHE_TTL=86400